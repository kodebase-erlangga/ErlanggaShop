<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- HorizontalScrollView untuk menampung icon dalam bentuk horizontal -->
<HorizontalScrollView
android:id="@+id/horizontalScrollView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="60dp">

<!-- LinearLayout untuk menampung semua icon -->
<LinearLayout
    android:id="@+id/icon_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- LinearLayout untuk icon Internet dan keterangannya -->
    <LinearLayout
        android:id="@+id/internetLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconInternet"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon1"
            android:contentDescription="Icon Internet" />

        <TextView
            android:id="@+id/textInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Calendar dan keterangannya -->
    <LinearLayout
        android:id="@+id/calendarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconCalendar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon2"
            android:contentDescription="Icon Calendar" />

        <TextView
            android:id="@+id/textCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Buku dan keterangannya -->
    <LinearLayout
        android:id="@+id/bukulayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconBuku"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon3"
            android:contentDescription="Buku" />

        <TextView
            android:id="@+id/textBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Perpus dan keterangannya -->
    <LinearLayout
        android:id="@+id/perpusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconPerpus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon4"
            android:contentDescription="Icon Perpus" />

        <TextView
            android:id="@+id/textPerpus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disukai"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Tambahkan 4 Icon Baru -->
    <!-- LinearLayout untuk icon Baru 1 dan keterangannya -->
    <LinearLayout
        android:id="@+id/iconBaru1Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconBaru1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon5"
            android:contentDescription="Icon Baru 1" />

        <TextView
            android:id="@+id/textBaru1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Baru 2 dan keterangannya -->
    <LinearLayout
        android:id="@+id/iconBaru2Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconBaru2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon6"
            android:contentDescription="Keranjang" />

        <TextView
            android:id="@+id/textBaru2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keranjang"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Baru 3 dan keterangannya -->
    <LinearLayout
        android:id="@+id/iconBaru3Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconBaru3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon7"
            android:contentDescription="Internet" />

        <TextView
            android:id="@+id/textBaru3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- LinearLayout untuk icon Baru 4 dan keterangannya -->
    <LinearLayout
        android:id="@+id/iconBaru4Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconBaru4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_icon8"
            android:contentDescription="Peta" />

        <TextView
            android:id="@+id/textBaru4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peta"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="0dp" />
    </LinearLayout>

</LinearLayout>
</HorizontalScrollView>

<FrameLayout
android:id="@+id/fragment_container"
android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="1dp" />

<com.google.android.material.tabs.TabLayout
android:id="@+id/tabLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp" />

<androidx.viewpager2.widget.ViewPager2
android:id="@+id/viewPager"
android:layout_width="match_parent"
android:layout_height="match_parent" />
    </LinearLayout>
